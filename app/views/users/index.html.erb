							<%= image_tag user.avatar.url(:medium), :class => "img-rounded img-centered" %>
							<div class="caption">
								<h3><%= link_to user.nickname, user, :class => "nickname" %> </h3>
								<h4><%= user.name %></h4>
								<p>Artículos: <%= user.posts.count %> </p>
							</div>
						</div>
